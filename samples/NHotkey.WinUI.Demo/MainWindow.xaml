<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NHotkey.WinUI.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NHotkey.WinUI.Demo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" Text="{x:Bind Value, Mode=OneWay}" />
        <TextBlock Grid.Row="1" HorizontalAlignment="Right" Text="Ctrl+Alt+Up" />
        <TextBlock Grid.Row="2" HorizontalAlignment="Right" Text="Ctrl+Alt+Down" />
    </Grid>
</Window>
